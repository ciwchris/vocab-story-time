                ></svg
              >
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script>
  document
    .querySelector("#podcastCopy")
    ?.addEventListener("click", () => writeClipboardText());
  const toolTip = document.querySelector("#podcastCopy");

  async function writeClipboardText() {
    try {
      await navigator.clipboard.writeText(
        "https://vocabstorytime.com/feed.xml"
      );
      toolTip?.classList.toggle("animate-pulse");
      setTimeout(() => toolTip?.classList.toggle("animate-pulse"), 1000);
    } catch (error: any) {
      console.error(error.message);
    }
  }
</script>
